<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net6.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWPF>true</UseWPF>
    <ApplicationManifestFile>app.manifest</ApplicationManifestFile>
    <ApplicationIcon>Resources\app_icon.ico</ApplicationIcon>
    <StartupObject>ThreadPilot.App</StartupObject>
    <Version>1.0.0</Version>
    <Authors>PrimeBuild</Authors>
    <Company>PrimeBuild</Company>
    <Description>Advanced system performance optimization through intuitive core affinity and process management tools.</Description>
    <Copyright>Copyright Â© PrimeBuild 2023</Copyright>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="ModernWpfUI" Version="0.9.6" />
    <PackageReference Include="System.Management" Version="6.0.0" />
    <PackageReference Include="MaterialDesignThemes" Version="4.8.0" />
    <PackageReference Include="LiveCharts.Wpf" Version="0.9.7" />
    <PackageReference Include="Hardcodet.NotifyIcon.Wpf" Version="1.1.0" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Resources\app_icon.ico" />
    <Resource Include="Resources\Images\**\*.*" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="attached_assets\**" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="attached_assets\**">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

</Project>