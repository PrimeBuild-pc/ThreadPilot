<Window x:Class="ThreadPilot.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ThreadPilot.Views"
        xmlns:vm="clr-namespace:ThreadPilot.ViewModels"
        mc:Ignorable="d"
        Title="ThreadPilot" 
        Height="720" 
        Width="1280" 
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}">
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{StaticResource HeaderBackgroundBrush}" 
                BorderBrush="{StaticResource HeaderBorderBrush}" 
                BorderThickness="0,0,0,1" 
                Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                
                <!-- Logo and title -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Image Source="/Resources/Images/Logo.png" Height="32" Width="32" Margin="0,0,10,0" />
                    <TextBlock Text="ThreadPilot" Style="{StaticResource HeaderTextStyle}" />
                </StackPanel>
                
                <!-- System info summary -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="{Binding SystemInfoSummary}" Style="{StaticResource InfoTextStyle}" />
                </StackPanel>
                
                <!-- Theme switcher -->
                <ToggleButton Grid.Column="2" 
                              Content="ðŸŒ™" 
                              Style="{StaticResource IconToggleButtonStyle}" 
                              IsChecked="{Binding IsDarkMode}" 
                              ToolTip="Toggle dark mode" />
            </Grid>
        </Border>
        
        <!-- Main content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            
            <!-- Navigation -->
            <Border Grid.Column="0" 
                    Background="{StaticResource NavigationBackgroundBrush}" 
                    BorderBrush="{StaticResource NavigationBorderBrush}" 
                    BorderThickness="1" 
                    CornerRadius="8">
                <StackPanel Margin="10">
                    <TextBlock Text="Navigation" Style="{StaticResource SectionHeaderStyle}" Margin="0,0,0,10" />
                    
                    <RadioButton Content="Dashboard" 
                                 Style="{StaticResource NavigationButtonStyle}" 
                                 Command="{Binding NavigateCommand}" 
                                 CommandParameter="Dashboard" 
                                 IsChecked="{Binding CurrentView, Converter={StaticResource ViewTypeConverter}, ConverterParameter=Dashboard}" />
                    
                    <RadioButton Content="Processes" 
                                 Style="{StaticResource NavigationButtonStyle}" 
                                 Command="{Binding NavigateCommand}" 
                                 CommandParameter="Processes" 
                                 IsChecked="{Binding CurrentView, Converter={StaticResource ViewTypeConverter}, ConverterParameter=Processes}" />
                    
                    <RadioButton Content="CPU Cores" 
                                 Style="{StaticResource NavigationButtonStyle}" 
                                 Command="{Binding NavigateCommand}" 
                                 CommandParameter="CpuCores" 
                                 IsChecked="{Binding CurrentView, Converter={StaticResource ViewTypeConverter}, ConverterParameter=CpuCores}" />
                    
                    <RadioButton Content="Profile Editor" 
                                 Style="{StaticResource NavigationButtonStyle}" 
                                 Command="{Binding NavigateCommand}" 
                                 CommandParameter="ProfileEditor" 
                                 IsChecked="{Binding CurrentView, Converter={StaticResource ViewTypeConverter}, ConverterParameter=ProfileEditor}" />
                    
                    <Separator Margin="0,10" />
                    
                    <Button Content="Apply Profile" 
                            Style="{StaticResource ActionButtonStyle}" 
                            Command="{Binding ApplyProfileCommand}" />
                    
                    <Button Content="Export Logs" 
                            Style="{StaticResource ActionButtonStyle}" 
                            Command="{Binding ExportLogsCommand}" />
                </StackPanel>
            </Border>
            
            <!-- Content -->
            <Border Grid.Column="1" 
                    Background="{StaticResource ContentBackgroundBrush}" 
                    BorderBrush="{StaticResource ContentBorderBrush}" 
                    BorderThickness="1" 
                    CornerRadius="8" 
                    Margin="20,0,0,0">
                <ContentControl Content="{Binding CurrentViewModel}" Margin="20" />
            </Border>
        </Grid>
        
        <!-- Footer -->
        <Border Grid.Row="2" 
                Background="{StaticResource FooterBackgroundBrush}" 
                BorderBrush="{StaticResource FooterBorderBrush}" 
                BorderThickness="0,1,0,0" 
                Padding="20,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                
                <!-- Status -->
                <TextBlock Grid.Column="0" 
                           Text="{Binding StatusMessage}" 
                           Style="{StaticResource StatusTextStyle}" 
                           VerticalAlignment="Center" />
                
                <!-- Version -->
                <TextBlock Grid.Column="1" 
                           Text="{Binding VersionInfo}" 
                           Style="{StaticResource InfoTextStyle}" 
                           VerticalAlignment="Center" />
            </Grid>
        </Border>
    </Grid>
</Window>