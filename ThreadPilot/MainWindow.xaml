<Window x:Class="ThreadPilot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ThreadPilot"
        xmlns:views="clr-namespace:ThreadPilot.Views"
        mc:Ignorable="d"
        Title="ThreadPilot" 
        Height="720" 
        Width="1280" 
        MinHeight="600" 
        MinWidth="800"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource AppBackgroundBrush}">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        
        <!-- Sidebar Navigation -->
        <Border Grid.Column="0" 
                Background="{StaticResource SidebarBackgroundBrush}" 
                BorderThickness="0,0,1,0" 
                BorderBrush="{StaticResource BorderBrush}">
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="80" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                
                <!-- App Logo and Title -->
                <StackPanel Grid.Row="0" 
                            Orientation="Horizontal" 
                            Margin="20,0"
                            VerticalAlignment="Center">
                    <Image Source="/Resources/app_icon.ico" 
                           Width="32" 
                           Height="32" 
                           Margin="0,0,10,0" />
                    <TextBlock Text="ThreadPilot" 
                               FontSize="22" 
                               FontWeight="SemiBold" 
                               VerticalAlignment="Center"
                               Foreground="{StaticResource PrimaryTextBrush}" />
                </StackPanel>
                
                <!-- Navigation Menu -->
                <ListBox Grid.Row="1" 
                         x:Name="NavigationMenu" 
                         BorderThickness="0"
                         Background="Transparent"
                         Margin="0,20,0,0"
                         SelectionChanged="NavigationMenu_SelectionChanged">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Height" Value="48" />
                            <Setter Property="Padding" Value="20,0" />
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="BorderThickness" Value="0" />
                            <Setter Property="Margin" Value="0" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border x:Name="border" 
                                                BorderThickness="{TemplateBinding BorderThickness}" 
                                                BorderBrush="{TemplateBinding BorderBrush}" 
                                                Background="{TemplateBinding Background}" 
                                                Padding="{TemplateBinding Padding}" 
                                                SnapsToDevicePixels="true">
                                            <ContentPresenter HorizontalAlignment="Left" 
                                                              VerticalAlignment="Center" 
                                                              SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsSelected" Value="true">
                                                <Setter Property="Background" Value="{StaticResource HoverBrush}" />
                                                <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource PrimaryBrush}" />
                                                <Setter Property="BorderThickness" TargetName="border" Value="4,0,0,0" />
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="true">
                                                <Setter Property="Background" Value="{StaticResource HoverBrush}" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>
                    
                    <ListBoxItem Tag="Dashboard">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE80F;" 
                                       FontFamily="Segoe MDL2 Assets" 
                                       VerticalAlignment="Center" 
                                       Margin="0,0,10,0" />
                            <TextBlock Text="Dashboard" 
                                       VerticalAlignment="Center" />
                        </StackPanel>
                    </ListBoxItem>
                    
                    <ListBoxItem Tag="ProcessManager">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE7EE;" 
                                       FontFamily="Segoe MDL2 Assets" 
                                       VerticalAlignment="Center" 
                                       Margin="0,0,10,0" />
                            <TextBlock Text="Process Manager" 
                                       VerticalAlignment="Center" />
                        </StackPanel>
                    </ListBoxItem>
                    
                    <ListBoxItem Tag="CoreAffinity">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE950;" 
                                       FontFamily="Segoe MDL2 Assets" 
                                       VerticalAlignment="Center" 
                                       Margin="0,0,10,0" />
                            <TextBlock Text="Core Affinity" 
                                       VerticalAlignment="Center" />
                        </StackPanel>
                    </ListBoxItem>
                    
                    <ListBoxItem Tag="PowerProfiles">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE945;" 
                                       FontFamily="Segoe MDL2 Assets" 
                                       VerticalAlignment="Center" 
                                       Margin="0,0,10,0" />
                            <TextBlock Text="Power Profiles" 
                                       VerticalAlignment="Center" />
                        </StackPanel>
                    </ListBoxItem>
                    
                    <ListBoxItem Tag="SystemOptimization">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE946;" 
                                       FontFamily="Segoe MDL2 Assets" 
                                       VerticalAlignment="Center" 
                                       Margin="0,0,10,0" />
                            <TextBlock Text="System Optimization" 
                                       VerticalAlignment="Center" />
                        </StackPanel>
                    </ListBoxItem>
                </ListBox>
                
                <!-- Settings & About -->
                <StackPanel Grid.Row="2" Margin="0,0,0,20">
                    <Separator Margin="20,0" Opacity="0.5" />
                    
                    <ListBoxItem Height="48" 
                                 Padding="20,0" 
                                 Tag="Settings"
                                 MouseUp="ListBoxItem_MouseUp">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE713;" 
                                       FontFamily="Segoe MDL2 Assets" 
                                       VerticalAlignment="Center" 
                                       Margin="0,0,10,0" />
                            <TextBlock Text="Settings" 
                                       VerticalAlignment="Center" />
                        </StackPanel>
                    </ListBoxItem>
                    
                    <ListBoxItem Height="48" 
                                 Padding="20,0" 
                                 Tag="About"
                                 MouseUp="ListBoxItem_MouseUp">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE946;" 
                                       FontFamily="Segoe MDL2 Assets" 
                                       VerticalAlignment="Center" 
                                       Margin="0,0,10,0" />
                            <TextBlock Text="About" 
                                       VerticalAlignment="Center" />
                        </StackPanel>
                    </ListBoxItem>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Content Area -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="60" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <Border Grid.Row="0" 
                    Background="{StaticResource CardBackgroundBrush}" 
                    BorderThickness="0,0,0,1" 
                    BorderBrush="{StaticResource BorderBrush}">
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    
                    <!-- Page Title -->
                    <TextBlock x:Name="PageTitle" 
                               Grid.Column="0" 
                               Text="Dashboard" 
                               FontSize="20" 
                               FontWeight="SemiBold" 
                               VerticalAlignment="Center" 
                               Margin="20,0" />
                    
                    <!-- Header Tools -->
                    <StackPanel Grid.Column="1" 
                                Orientation="Horizontal" 
                                VerticalAlignment="Center" 
                                Margin="0,0,20,0">
                        
                        <Button Style="{StaticResource ActionButtonStyle}" 
                                ToolTip="Refresh" 
                                Margin="5,0" 
                                Click="RefreshButton_Click">
                            <TextBlock Text="&#xE72C;" 
                                       FontFamily="Segoe MDL2 Assets" 
                                       FontSize="16" />
                        </Button>
                        
                        <Button Style="{StaticResource ActionButtonStyle}" 
                                ToolTip="Notifications" 
                                Margin="5,0" 
                                Click="NotificationsButton_Click">
                            <TextBlock Text="&#xE7E7;" 
                                       FontFamily="Segoe MDL2 Assets" 
                                       FontSize="16" />
                        </Button>
                        
                        <Button Style="{StaticResource ActionButtonStyle}" 
                                ToolTip="Theme Toggle" 
                                Margin="5,0" 
                                Click="ThemeToggleButton_Click">
                            <TextBlock x:Name="ThemeIcon" 
                                       Text="&#xE793;" 
                                       FontFamily="Segoe MDL2 Assets" 
                                       FontSize="16" />
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Content Frame -->
            <Frame x:Name="ContentFrame" 
                   Grid.Row="1" 
                   NavigationUIVisibility="Hidden" 
                   Padding="20" />
        </Grid>
    </Grid>
</Window>