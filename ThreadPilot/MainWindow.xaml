<Window x:Class="ThreadPilot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ThreadPilot"
        xmlns:vm="clr-namespace:ThreadPilot.ViewModels"
        mc:Ignorable="d"
        Title="ThreadPilot" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource WindowBackgroundBrush}">
    
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{StaticResource SurfaceBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,0,0,1"
                Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0"
                            Orientation="Horizontal" 
                            VerticalAlignment="Center">
                    <TextBlock Text="ThreadPilot"
                               FontSize="22"
                               FontWeight="Bold"
                               Foreground="{StaticResource PrimaryBrush}"/>
                    <TextBlock Text="Beta"
                               FontSize="12"
                               Foreground="{StaticResource SecondaryBrush}"
                               Margin="8,0,0,0"
                               VerticalAlignment="Bottom"/>
                </StackPanel>
                
                <StackPanel Grid.Column="2"
                            Orientation="Horizontal"
                            VerticalAlignment="Center">
                    <CheckBox Content="Auto-refresh"
                              IsChecked="{Binding IsAutoRefreshEnabled}"
                              Margin="0,0,15,0"/>
                    <Button Content="Refresh"
                            Command="{Binding RefreshCommand}"
                            Style="{StaticResource SecondaryButtonStyle}"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Left Panel - System Info & Profiles -->
            <Grid Grid.Column="0" Margin="0,0,10,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- System Info Card -->
                <Border Grid.Row="0" Style="{StaticResource CardBorderStyle}">
                    <StackPanel>
                        <TextBlock Text="System Information"
                                   Style="{StaticResource SubtitleTextBlockStyle}"/>
                        
                        <Grid Margin="0,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <!-- CPU -->
                            <TextBlock Grid.Row="0" Grid.Column="0"
                                       Text="CPU:"
                                       Style="{StaticResource StatLabelTextBlockStyle}"
                                       Margin="0,0,10,5"/>
                            <TextBlock Grid.Row="0" Grid.Column="1"
                                       Text="{Binding CpuName}"
                                       Style="{StaticResource StatValueTextBlockStyle}"
                                       Margin="0,0,0,5"/>
                            
                            <!-- CPU Usage -->
                            <TextBlock Grid.Row="1" Grid.Column="0"
                                       Text="CPU Usage:"
                                       Style="{StaticResource StatLabelTextBlockStyle}"
                                       Margin="0,0,10,5"/>
                            <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Vertical"
                                        Margin="0,0,0,5">
                                <TextBlock Text="{Binding CpuUsagePercent, StringFormat={}{0:0.0}%}"
                                           Style="{StaticResource StatValueTextBlockStyle}"/>
                                <ProgressBar Value="{Binding CpuUsagePercent}"
                                             Maximum="100"
                                             Height="6"
                                             Margin="0,2,0,0"/>
                            </StackPanel>
                            
                            <!-- Memory -->
                            <TextBlock Grid.Row="2" Grid.Column="0"
                                       Text="Memory:"
                                       Style="{StaticResource StatLabelTextBlockStyle}"
                                       Margin="0,0,10,5"/>
                            <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Vertical"
                                        Margin="0,0,0,5">
                                <TextBlock Text="{Binding MemoryUsage}"
                                           Style="{StaticResource StatValueTextBlockStyle}"/>
                                <ProgressBar Value="{Binding MemoryUsagePercent}"
                                             Maximum="100"
                                             Height="6"
                                             Margin="0,2,0,0"/>
                            </StackPanel>
                            
                            <!-- OS -->
                            <TextBlock Grid.Row="3" Grid.Column="0"
                                       Text="OS:"
                                       Style="{StaticResource StatLabelTextBlockStyle}"
                                       Margin="0,0,10,5"/>
                            <TextBlock Grid.Row="3" Grid.Column="1"
                                       Text="{Binding OperatingSystem}"
                                       Style="{StaticResource StatValueTextBlockStyle}"
                                       Margin="0,0,0,5"/>
                            
                            <!-- Power Plan -->
                            <TextBlock Grid.Row="4" Grid.Column="0"
                                       Text="Power Plan:"
                                       Style="{StaticResource StatLabelTextBlockStyle}"
                                       Margin="0,0,10,5"/>
                            <TextBlock Grid.Row="4" Grid.Column="1"
                                       Text="{Binding CurrentPowerPlan}"
                                       Style="{StaticResource StatValueTextBlockStyle}"
                                       Margin="0,0,0,5"/>
                        </Grid>
                    </StackPanel>
                </Border>
                
                <!-- Profiles Card -->
                <Border Grid.Row="1" Style="{StaticResource CardBorderStyle}" Margin="0,15,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Text="Power Profiles"
                                   Style="{StaticResource SubtitleTextBlockStyle}"/>
                        
                        <ListView Grid.Row="1"
                                  ItemsSource="{Binding PowerProfiles}"
                                  SelectedItem="{Binding SelectedProfile}"
                                  BorderThickness="0"
                                  Margin="0,10,0,0"
                                  Background="Transparent">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="10" Margin="0,2">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                                                <TextBlock Text="{Binding Description}" 
                                                           Foreground="{StaticResource SecondaryTextBrush}"
                                                           TextWrapping="Wrap"/>
                                            </StackPanel>
                                            
                                            <TextBlock Grid.Column="1"
                                                       Text="{Binding Category}"
                                                       Foreground="{StaticResource SecondaryTextBrush}"
                                                       VerticalAlignment="Top"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                        
                        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,0">
                            <Button Content="Apply" 
                                    Command="{Binding ApplyProfileCommand}"
                                    Style="{StaticResource PrimaryButtonStyle}"
                                    Margin="0,0,5,0"/>
                            <Button Content="Import" 
                                    Command="{Binding ImportProfileCommand}"
                                    Style="{StaticResource SecondaryButtonStyle}"
                                    Margin="0,0,5,0"/>
                            <Button Content="Export" 
                                    Command="{Binding ExportProfileCommand}"
                                    Style="{StaticResource SecondaryButtonStyle}"
                                    Margin="0,0,5,0"/>
                            <Button Content="Create" 
                                    Command="{Binding CreateProfileCommand}"
                                    Style="{StaticResource SecondaryButtonStyle}"
                                    Margin="0,0,5,0"/>
                            <Button Content="Delete" 
                                    Command="{Binding DeleteProfileCommand}"
                                    Style="{StaticResource SecondaryButtonStyle}"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
            
            <!-- Right Panel - Processes & Cores -->
            <TabControl Grid.Column="1" 
                       Style="{StaticResource CustomTabControlStyle}"
                       Margin="10,0,0,0">
                <TabItem Header="Processes" Style="{StaticResource CustomTabItemStyle}">
                    <Grid Margin="0,15,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <DataGrid Grid.Row="0"
                                 ItemsSource="{Binding Processes}"
                                 SelectedItem="{Binding SelectedProcess}"
                                 Style="{StaticResource CustomDataGridStyle}"
                                 Margin="0,0,0,10">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                                <DataGridTextColumn Header="ID" Binding="{Binding ProcessId}" Width="70"/>
                                <DataGridTextColumn Header="CPU %" Binding="{Binding CpuUsagePercent, StringFormat={}{0:0.0}}" Width="70"/>
                                <DataGridTextColumn Header="Memory (MB)" Binding="{Binding MemoryUsageMB, StringFormat={}{0:0.0}}" Width="100"/>
                                <DataGridTextColumn Header="Threads" Binding="{Binding ThreadCount}" Width="70"/>
                                <DataGridTextColumn Header="Priority" Binding="{Binding Priority}" Width="100"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        
                        <StackPanel Grid.Row="1" Orientation="Horizontal">
                            <Button Content="Set Affinity" 
                                   Command="{Binding SetProcessAffinityCommand}"
                                   Style="{StaticResource SecondaryButtonStyle}"
                                   Margin="0,0,5,0"/>
                            <Button Content="Set Priority" 
                                   Command="{Binding SetProcessPriorityCommand}"
                                   CommandParameter="{x:Static local:ProcessPriority.High}"
                                   Style="{StaticResource SecondaryButtonStyle}"
                                   Margin="0,0,5,0"/>
                            <Button Content="Terminate" 
                                   Command="{Binding TerminateProcessCommand}"
                                   Style="{StaticResource SecondaryButtonStyle}"/>
                        </StackPanel>
                    </Grid>
                </TabItem>
                
                <TabItem Header="CPU Cores" Style="{StaticResource CustomTabItemStyle}">
                    <ItemsControl ItemsSource="{Binding CpuCores}"
                                 Margin="0,15,0,0">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource CardBorderStyle}"
                                       Width="150"
                                       Height="120"
                                       Margin="5">
                                    <StackPanel>
                                        <TextBlock>
                                            <Run Text="Core " FontWeight="SemiBold"/>
                                            <Run Text="{Binding CoreId}"/>
                                            <Run Text=" / CPU "/>
                                            <Run Text="{Binding ProcessorId}"/>
                                        </TextBlock>
                                        
                                        <TextBlock>
                                            <Run Text="Status: "/>
                                            <Run Text="{Binding IsParked, Converter={StaticResource BoolToParkedConverter}}"
                                               Foreground="{Binding IsParked, Converter={StaticResource BoolToParkedConverter}}"/>
                                        </TextBlock>
                                        
                                        <TextBlock>
                                            <Run Text="Usage: "/>
                                            <Run Text="{Binding UsagePercent, StringFormat={}{0:0.0}%}"/>
                                        </TextBlock>
                                        
                                        <ProgressBar Value="{Binding UsagePercent}"
                                                   Maximum="100"
                                                   Height="6"
                                                   Margin="0,5,0,0"/>
                                        
                                        <TextBlock Margin="0,5,0,0">
                                            <Run Text="Frequency: "/>
                                            <Run Text="{Binding CurrentFrequencyMhz, StringFormat={}{0:0.00} MHz}"/>
                                        </TextBlock>
                                        
                                        <TextBlock>
                                            <Run Text="Temperature: "/>
                                            <Run Text="{Binding TemperatureCelsius, StringFormat={}{0:0.0}°C}"/>
                                        </TextBlock>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </TabItem>
            </TabControl>
        </Grid>
        
        <!-- Status Bar -->
        <Border Grid.Row="2" 
                Background="{StaticResource SurfaceBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,1,0,0"
                Padding="15,8">
            <TextBlock Text="{Binding StatusMessage}"
                       Foreground="{StaticResource SecondaryTextBrush}"/>
        </Border>
    </Grid>
</Window>