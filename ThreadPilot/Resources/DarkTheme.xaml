<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Base Colors -->
    <Color x:Key="BackgroundColor">#202020</Color>
    <Color x:Key="ForegroundColor">#F1F1F1</Color>
    <Color x:Key="SecondaryForegroundColor">#AAAAAA</Color>
    <Color x:Key="BorderColor">#404040</Color>
    <Color x:Key="ControlBackgroundColor">#303030</Color>
    <Color x:Key="StatusBarColor">#252525</Color>
    <Color x:Key="ButtonHoverColor">#3A3A3A</Color>
    <Color x:Key="ButtonPressedColor">#505050</Color>
    <Color x:Key="OverlayColor">#80000000</Color>
    <Color x:Key="ListItemSelectedColor">#3A3A3A</Color>
    
    <!-- Accent Colors -->
    <Color x:Key="AccentColor">#4680FF</Color>
    <Color x:Key="AccentForegroundColor">#FFFFFF</Color>
    <Color x:Key="LogoColor">#4680FF</Color>
    <Color x:Key="HeaderForegroundColor">#FFFFFF</Color>
    <Color x:Key="StatusBarForegroundColor">#CCCCCC</Color>
    
    <!-- State Colors -->
    <Color x:Key="SuccessColor">#4CAF50</Color>
    <Color x:Key="WarningColor">#FFC107</Color>
    <Color x:Key="ErrorColor">#F44336</Color>
    
    <!-- Button Colors -->
    <Color x:Key="PrimaryButtonBackgroundColor">#4680FF</Color>
    <Color x:Key="PrimaryButtonForegroundColor">#FFFFFF</Color>
    <Color x:Key="PrimaryButtonBorderColor">#4680FF</Color>
    
    <!-- Solid Color Brushes -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
    <SolidColorBrush x:Key="ForegroundBrush" Color="{StaticResource ForegroundColor}"/>
    <SolidColorBrush x:Key="SecondaryForegroundBrush" Color="{StaticResource SecondaryForegroundColor}"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="ControlBackgroundBrush" Color="{StaticResource ControlBackgroundColor}"/>
    <SolidColorBrush x:Key="StatusBarBrush" Color="{StaticResource StatusBarColor}"/>
    <SolidColorBrush x:Key="ButtonHoverBrush" Color="{StaticResource ButtonHoverColor}"/>
    <SolidColorBrush x:Key="ButtonPressedBrush" Color="{StaticResource ButtonPressedColor}"/>
    <SolidColorBrush x:Key="OverlayBrush" Color="{StaticResource OverlayColor}"/>
    <SolidColorBrush x:Key="ListItemSelectedBrush" Color="{StaticResource ListItemSelectedColor}"/>
    
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
    <SolidColorBrush x:Key="AccentForegroundBrush" Color="{StaticResource AccentForegroundColor}"/>
    <SolidColorBrush x:Key="LogoBrush" Color="{StaticResource LogoColor}"/>
    <SolidColorBrush x:Key="HeaderForegroundBrush" Color="{StaticResource HeaderForegroundColor}"/>
    <SolidColorBrush x:Key="StatusBarForegroundBrush" Color="{StaticResource StatusBarForegroundColor}"/>
    
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}"/>
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}"/>
    
    <SolidColorBrush x:Key="PrimaryButtonBackgroundBrush" Color="{StaticResource PrimaryButtonBackgroundColor}"/>
    <SolidColorBrush x:Key="PrimaryButtonForegroundBrush" Color="{StaticResource PrimaryButtonForegroundColor}"/>
    <SolidColorBrush x:Key="PrimaryButtonBorderBrush" Color="{StaticResource PrimaryButtonBorderColor}"/>
</ResourceDictionary>
